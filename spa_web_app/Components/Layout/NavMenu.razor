@implements IDisposable
@inject NavigationManager NavigationManager

<nav class="spa-navbar">
    <div class="container-fluid">
        <!-- Brand -->
        <a class="navbar-brand" href="">SpaWebApp</a>

        <!-- Navigation links -->
        <div class="nav-links">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill"></span> Home
            </NavLink>

            <AuthorizeView>
                <Authorized Context="authContext">
                    <NavLink class="nav-link" href="Account/Manage">
                        <span class="bi bi-person-fill"></span> @authContext.User.Identity?.Name
                    </NavLink>

                    <NavLink class="nav-link" href="/appointments/book" Match="NavLinkMatch.All">
                        <span class="bi bi-calendar-check"></span> Book Appointment
                    </NavLink>

                    <NavLink class="nav-link" href="/appointments" Match="NavLinkMatch.All">
                        <span class="bi bi-calendar-event"></span> My Appointments
                    </NavLink>

                    @if (authContext.User.IsInRole("Receptionist")
                                        || authContext.User.IsInRole("Manager")
                                        || authContext.User.IsInRole("Admin"))
                    {
                        <NavLink class="nav-link" href="/appointments/all" Match="NavLinkMatch.All">
                            <span class="bi bi-calendar3"></span> All Appointments
                        </NavLink>
                    }

                    <form action="Account/Logout" method="post" class="nav-link logout-form">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit">
                            <span class="bi bi-arrow-bar-left"></span> Logout
                        </button>
                    </form>
                </Authorized>

                <NotAuthorized>
                    <NavLink class="nav-link" href="Account/Register">
                        <span class="bi bi-person"></span> Register
                    </NavLink>
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="bi bi-person-badge"></span> Login
                    </NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
