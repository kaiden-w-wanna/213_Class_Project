@page "/Account/EmployeeRegister"

<PageTitle>Employee Registration</PageTitle>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 p-4 rounded-4">

            <div class="text-center mb-4">
                <h1 class="fw-bold">Employee Registration</h1>
                <p class="text-muted">Select your employee role</p>
            </div>

            <div class="d-grid gap-3">
                <a class="btn btn-outline-primary btn-lg rounded-pill" href="/Account/RegisterTherapist">
                    💆 Register as Therapist
                </a>

                <a class="btn btn-outline-primary btn-lg rounded-pill" href="/Account/RegisterReceptionist">
                    📞 Register as Receptionist
                </a>

                <a class="btn btn-outline-primary btn-lg rounded-pill" href="/Account/RegisterManager">
                    🧑‍💼 Register as Manager
                </a>

                <a class="btn btn-outline-danger btn-lg rounded-pill" href="/Account/RegisterAdmin">
                    🛡️ Register as Admin
                </a>
            </div>

            <div class="text-center mt-4">
                <small class="text-muted">Not an employee?</small><br />
                <a href="/Account/Register" class="text-decoration-none fw-semibold">
                    Register as a customer
                </a>
            </div>

        </div>
    </div>
</div>

