@page "/"

<PageTitle>Standard Spa</PageTitle>

<div class="spa-hero">
    <div class="spa-hero-content">
        <h1>Welcome To Super Spa</h1>
        <p>
            A modern spa experience designed around your wellness.
            Book appointments, manage your visits, and unwind effortlessly.
        </p>

        <AuthorizeView>
            <Authorized>
                <a class="btn btn-primary btn-lg" href="/appointments">
                    View My Appointments
                </a>
            </Authorized>

            <NotAuthorized>
                <div class="hero-buttons">
                    <a class="btn btn-primary btn-lg me-3" href="/Account/Register">
                        Register to Book an Appointment
                    </a>
                    <a class="btn btn-outline-light btn-lg" href="/Account/Login">
                        Already have an account? Log in here.
                    </a>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>

<div class="spa-wave"></div>

<div class="container spa-features">
    <div class="row text-center">
        <div class="col-md-4">
            <div class="card p-4">
                <h5>🌿 Personalized Care</h5>
                <p>Tailored spa services to help you feel your best.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4">
                <h5>🗓 Easy Booking</h5>
                <p>Book and manage appointments online anytime.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4">
                <h5>💆 Expert Therapists</h5>
                <p>Licensed professionals delivering premium care.</p>
            </div>
        </div>
    </div>
</div>
