@page "/appointments"
@* 1. Add InteractiveServer Render Mode to prevent full page reloads if you add interactivity later *@
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using spa_web_app.Services
@using spa_web_app.Models
@attribute [Authorize]

@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<IdentityUser> UserManager
@inject IAppointmentService AppointmentService
@inject NavigationManager NavigationManager

<PageTitle>My Appointments</PageTitle>

<div class="container mt-4">
    <h3>My Appointments</h3>

    @if (_isLoading)
    {
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    }
    else if (!_isAuthenticated)
    {
        <div class="alert alert-warning">You must be logged in to view your appointments.</div>
    }
    else if (!_appointments.Any())
    {
        <div class="alert alert-info">
            You have no appointments booked. <a href="/appointments/book">Book one now!</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Service</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Therapist</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th></th> @* For actions like Cancel *@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appt in _appointments)
                    {
                        <tr>
                            <td>@appt.ServiceName</td>

                            @* 2. FIX: Robust date formatting syntax *@
                            <td>@(appt.StartTime.ToShortDateString())</td>

                            @* 3. FIX: Robust time formatting syntax *@
                            <td>@($"{appt.StartTime:h:mm tt}") - @($"{appt.EndTime:h:mm tt}")</td>

                            @* 4. FIX: Therapist access now works due to service Include() *@
                            <td>@(appt.Therapist?.UserName ?? "Unassigned")</td>

                            <td>@(appt.Price.HasValue? appt.Price.Value.ToString("C") : "N/A")</td>
                            <td>
                                @if (appt.Status == "Cancelled")
                                {
                                    <span class="badge bg-danger">Cancelled</span>
                                }
                                else if (appt.StartTime < DateTime.Now)
                                {
                                    <span class="badge bg-secondary">Completed</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@appt.Status</span>
                                }
                            </td>
                            <td>
                                @if (appt.StartTime > DateTime.Now && appt.Status != "Cancelled")
                                {
                                    <button class="btn btn-sm btn-outline-danger"
                                            @onclick="() => CancelAppointment(appt.Id)"
                                            disabled="@_isCancelling">
                                        Cancel
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!string.IsNullOrEmpty(_statusMessage))
        {
            <div class="mt-3 alert @(_statusMessage.Contains("successfully") ? "alert-success" : "alert-danger")">
                @_statusMessage
            </div>
        }
    }
</div>

@code {
    private bool _isLoading = true;
    private bool _isAuthenticated = false;
    private bool _isCancelling = false;
    private string? _statusMessage;

    // Using IReadOnlyList<Appointment> to match your service's return type
    private IReadOnlyList<Appointment> _appointments = Array.Empty<Appointment>();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        _isAuthenticated = user.Identity != null && user.Identity.IsAuthenticated;

        if (_isAuthenticated)
        {
            try
            {
                // 5. CRITICAL FIX: Use the method that accepts ClaimsPrincipal user,
                // which correctly handles roles/filtering in your service.
                _appointments = await AppointmentService.GetAppointmentsForUserAsync(user);
            }
            catch (Exception ex)
            {
                _statusMessage = $"Error loading appointments: {ex.Message}";
            }
        }

        _isLoading = false;
    }

    private async Task CancelAppointment(int appointmentId)
    {
        _isCancelling = true;
        _statusMessage = null;

        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            bool success = await AppointmentService.CancelAppointmentAsync(appointmentId, user);

            if (success)
            {
                _statusMessage = "Appointment cancelled successfully.";

                // Refresh the list immediately
                await OnInitializedAsync();
            }
            else
            {
                _statusMessage = "Could not cancel appointment. It may have already passed or been cancelled.";
            }
        }
        catch (Exception)
        {
            _statusMessage = "An unexpected error occurred during cancellation.";
        }
        finally
        {
            _isCancelling = false;
        }
    }
}