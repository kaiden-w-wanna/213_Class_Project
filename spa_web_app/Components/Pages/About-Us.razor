@page "/about-us"
@using Microsoft.AspNetCore.Components

<PageTitle>About Us - Super Spa</PageTitle>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">About Super Spa</h1>
        <p class="lead text-muted">
            Elevating wellness and relaxation to a whole new level.
        </p>
    </div>

    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h2 class="fw-bold">Our Mission</h2>
            <p class="text-muted">
                At Super Spa, our mission is to provide a sanctuary where you can unwind, rejuvenate,
                and experience the ultimate in wellness and self-care. We combine expert therapists,
                premium treatments, and a serene environment to make every visit unforgettable.
            </p>
        </div>
        <div class="col-md-6">
            <img src="images/spa-relax.jpg" alt="Spa Relaxation" class="img-fluid rounded shadow" />
        </div>
    </div>

    <div class="row align-items-center mb-5 flex-md-row-reverse">
        <div class="col-md-6">
            <h2 class="fw-bold">Our Services</h2>
            <ul class="list-unstyled text-muted">
                <li>💆 Professional Massages & Body Treatments</li>
                <li>💅 Manicure, Pedicure & Beauty Care</li>
                <li>🧘 Yoga & Meditation Sessions</li>
                <li>🌿 Holistic Wellness Programs</li>
            </ul>
        </div>
        <div class="col-md-6">
            <img src="images/spa-services.jpg" alt="Spa Services" class="img-fluid rounded shadow" />
        </div>
    </div>

    <div class="text-center mt-5">
        <h2 class="fw-bold">Meet Our Team</h2>
        <p class="text-muted mb-4">
            Our dedicated professionals are here to ensure your wellness journey is exceptional.
        </p>
        <div class="row justify-content-center">
            <div class="col-sm-6 col-md-3 mb-4">
                <div class="card border-0 shadow-sm rounded-4">
                    <img src="images/team-therapist.jpg" class="card-img-top rounded-top" alt="Therapist">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-0">Jane Doe</h5>
                        <small class="text-muted">Lead Therapist</small>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-3 mb-4">
                <div class="card border-0 shadow-sm rounded-4">
                    <img src="images/team-receptionist.jpg" class="card-img-top rounded-top" alt="Receptionist">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-0">John Smith</h5>
                        <small class="text-muted">Front Desk Manager</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
