@page "/about-us"

<PageTitle>About Us | Super Spa</PageTitle>

<!-- HERO -->
<div class="spa-hero">
    <div class="spa-hero-content">
        <h1>About Super Spa</h1>
        <p>
            Relax. Restore. Rejuvenate.
        </p>
    </div>
</div>

<div class="spa-wave"></div>

<!-- ABOUT -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <p class="fs-5 text-muted">
                <strong>Our Mission:</strong> To provide every guest of Super Spa with a personalized sanctuary for renewal, delivering exceptional therapeutic and relaxation services that promote complete well-being and leave them feeling refreshed, balanced, and confident.
            </p>
        </div>
    </div>
</div>

<!-- SERVICES -->
<div class="container my-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Our Services</h2>
        <p class="text-muted">Carefully crafted treatments for total relaxation</p>
    </div>

    <div class="row g-4">

        <!-- Swedish -->
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 service-card text-white rounded-4">
                <img src="images/massage.jpg" class="card-img-top" alt="Swedish Massage" />
                <div class="card-body text-center">
                    <h5 class="fw-semibold mb-2">Swedish Massage</h5>
                    <p>
                        A gentle, full-body massage designed to reduce stress,
                        improve circulation, and promote overall relaxation.
                    </p>
                </div>
            </div>
        </div>

        <!-- Deep Tissue -->
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 service-card text-white rounded-4">
                <img src="images/deeptissue.jpg" class="card-img-top" alt="Deep Tissue Massage" />
                <div class="card-body text-center">
                    <h5 class="fw-semibold mb-2">Deep Tissue Massage</h5>
                    <p>
                        Focused pressure therapy that targets deeper muscle layers
                        to relieve chronic pain and tension.
                    </p>
                </div>
            </div>
        </div>

        <!-- Facial -->
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 service-card text-white rounded-4">
                <img src="images/facial.jpeg" class="card-img-top" alt="Facial Treatment" />
                <div class="card-body text-center">
                    <h5 class="fw-semibold mb-2">Facial Treatments</h5>
                    <p>
                        Customized facial treatments that cleanse, hydrate,
                        and rejuvenate your skin for a healthy glow.
                    </p>
                </div>
            </div>
        </div>

        <!-- Body Scrub -->
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 service-card text-white rounded-4">
                <img src="images/bodyscrub.jpg" class="card-img-top" alt="Body Scrub" />
                <div class="card-body text-center">
                    <h5 class="fw-semibold mb-2">Body Scrub</h5>
                    <p>
                        An exfoliating treatment that removes impurities
                        and leaves your skin smooth and refreshed.
                    </p>
                </div>
            </div>
        </div>

    </div>
</div>
